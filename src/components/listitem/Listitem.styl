.listitem
    display block
    background #fff
    position relative
    padding: 10px 10px 8px 10px
    .contentColor
      color: #17C295
    .contentColor1
      color: #CB1717
    .notice-circle
        width w=20px
        height w
        border: 1px solid lightgrey
        border-radius: (w/2)
    .border
        border 1px solid red
.msg
    position: relative
    border-bottom: 1px solid #E6E6E6
    color #999
    &:first-child
      border-top: 1px solid #E6E6E6
    .content
      font-size: 12px
      line-height: @font-size
      .time
         width: 20px
         height 12px
         line-height @height
         color lightblue 
         border-radius: (@height/2)
         border: 1px solid lightblue
         padding: 2px 4px
    .title
      color: #333333
      font-size: 14px
      vertical-align: middle
    svg 
      vertical-align: middle
    .circle-place
      position absolute
      height 90%
      vertical-align: middle
      left 10px
    .content-box
      margin-left: 30px
 

