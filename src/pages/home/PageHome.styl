$bac_color=rgb(245,248,250)
$font-size = 12px
$tag_content_font=15px
.home
    font-size: $font-size
    &-head
        padding: 10px 
        height:140px
        position relative
        z-index 11
    &-content
        position: fixed
        left 0
        right 0
        top 124px
        bottom 0
        &-deviation
            position: absolute
            overflow-y scroll
            left 0
            right 0
            top -36px
            bottom: 0
            background: $bac_color
    .list-item-img
        font-size: 13px
        margin: 10px 10px 0 10px
        img 
          border-radius: 0
          margin-left: 10px
        .t-list-text-content
          span 
           font-size: 14px
      .t-list-wrap
          padding 0
          svg 
            vertical-align: middle
 
        
